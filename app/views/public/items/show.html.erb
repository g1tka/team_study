<div class="container p-5">
  <div class="row">

  <div class="col-5"><%= image_tag @item.get_image, width: 360, height: 240 %></div>
    <div class="col-7">
      <h3><strong><%= @item.name %></strong></h3>
      <p><%= @item.introduction %></p>
      <h3 class="my-5">￥<%= number_to_currency(@item.price, unit: "", precision: 0) %>
      <small style="font-size: 0.95rem; color: black;">(税込)</small>
      </h3>

      <div class="row">
        <div class="col">
          <% if @item.is_active == true %>
           <%= form_with(model: @cart_item,url: cart_items_path, method: :post,local: true)do |f| %>
           <%= f.label :amount, "個数選択" %>
　          <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.select :amount, *[1..10] %>
            　　<%= f.submit "カートに入れる", class: "btn btn-success btn-sm" %>
          <% end %>
        <% end %>
        </div>
      </div>

    </div>
    </div>

</div>